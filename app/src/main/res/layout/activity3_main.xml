<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Estado"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btngrabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:onClick="grabar"
        android:text="Grabar" />

    <Button
        android:id="@+id/btndetener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btngrabar"
        android:layout_centerHorizontal="true"
        android:onClick="detener"
        android:text="Detener grabación" />

    <Button
        android:id="@+id/btnreproduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btndetener"
        android:layout_centerHorizontal="true"
        android:onClick="reproducir"
        android:text="Reproducir grabación" />

</RelativeLayout>